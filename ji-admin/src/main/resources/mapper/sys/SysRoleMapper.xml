<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.power4j.ji.admin.modules.sys.dao.SysRoleMapper">
  <select id="selectByUserId" resultType="com.power4j.ji.admin.modules.sys.entity.SysRole">
    select r.* from t_sys_role r,t_sys_role_grantee g
    where g.user_id = #{userId} and r.id = g.role_id
    <if test="grantType != null">
      AND g.grant_type = #{grantType}
    </if>
    and r.del_flag is null
  </select>
</mapper>
