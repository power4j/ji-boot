root = true

[*.{adoc, bat, groovy, html, java, js, jsp, kt, kts, md, properties, yml, py, rb, sh, sql, svg, txt, xml, xsd}]
charset = utf-8

[*.{groovy, java, kt, kts}]
indent_style = tab
indent_size = 4
continuation_indent_size = 8
end_of_line = lf

[*.{js, html, xml, xsd, yml}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
